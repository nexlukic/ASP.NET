@using Blog.Biznis.DTO;
@using Blog.Models.Aplication;
@model SingleViewModel
@{
    ViewBag.Title = "Single";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content sing">
    <div class="container">
        <div class="content-text cnt-txt">
            <div class="title">
                @foreach (PostDto post in Model.post)
                {
                    <div class="some-title">
                        <h3>@post.naslov</h3>
                    </div>
                    <div class="john">
                        <p><a href="#">@post.korisnik_ime</a><span>@post.datum</span></p>
                    </div>
                    <div class="clearfix"> </div>
                    <div class="tilte-grid">
                        <img src="/Content/images/@post.putanja" alt=" " />

                        <p class="Sed">
                            <span>
                                @post.tekst
                            </span>
                        </p>
                    </div>
                    <div class="clearfix"> </div>
                    <div class="comments">
                        <h4>Comments</h4>
                        @foreach (KomentarDto komentar in post.komentari)
                        {
                            <div class="comments-info">

                                <div class="cmnt-icon-right">
                                    <p>@komentar.datum</p>
                                    <p><a href="#">@komentar.ime_korisnika</a></p>
                                    <p class="cmmnt">
                                        @komentar.tekst_komentara
                                    </p>
                                </div>
                                <div class="clearfix"> </div>
                                <div class="aliqua">
                                    <a href="#">Reply</a>
                                </div>
                            </div>
                        }
                    </div>
                    if (Request.IsAuthenticated)
                    {
                    <div class="consequat">
                        <h4>Leave Your Comment Here</h4>
                        <form>
                            <textarea type="text" id="textarea" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Message...';}" required="">Message...</textarea>
                            <br>
                            <button id="btn-post-id" value="@post.id_posta" type="submit">Comment</button>
                        </form>
                    </div>
                    }
                   


                }



            </div>
    </div>
</div>
    </div>
